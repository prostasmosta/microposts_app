<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="btn btn-info">
    <strong id="following" class="">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>" class="btn btn-dark">
    <strong id="followers" class="">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
