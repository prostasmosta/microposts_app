<div class="navbar navbar-expand navbar-light bg-light">
  <div class="container justify-content-start">
    <%= link_to "Sample app", root_path, class: 'navbar-brand text-primary' %>
    <nav class="">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, class: 'btn btn-light' %></li>
        <li><%= link_to "Help", help_path, class: 'btn btn-light' %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, class: 'btn btn-light' %></li>
          <div class="nav-item dropdown">
            <a class="text-dark nav-link dropdown-toggle" href="#" id="navbarDropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Account
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li class="dropdown-item"><%= button_to "Profile", current_user, method: "get",
                                                    class: 'text-decoration-none btn btn-link text-dark' %></li>
              <li class="dropdown-item"><%= button_to "Settings", edit_user_path(current_user), method: "get",
                                                    class: 'text-decoration-none btn btn-link text-dark' %></li>
              <li class="dropdown-item"><%= button_to "Log out", logout_path, method: "delete",
                                                      class: 'text-decoration-none btn btn-link text-dark' %></li>
            </ul>
          </div>
        <% else %>
          <li><%= link_to "Log in", login_path, class: 'btn btn-light' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
</header>
