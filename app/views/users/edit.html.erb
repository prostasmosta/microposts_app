<% provide(:title, "Edit user") %>
<h1 class="my-3">Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'form', f: f %>
      <div class="my-3"><%= f.submit "Save changes", class: "btn btn-primary" %></div>
    <% end %>
    <div class="gravatar_edit mb-3">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change avatar</a>
    </div>
    <div><%= link_to 'back', :back %></div>
  </div>
</div>
