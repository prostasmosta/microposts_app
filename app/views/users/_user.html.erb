<li class="mb-3">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= button_to "delete", user, method: :delete,
                    form: { data: { turbo_confirm: "You sure?" } }, class: 'btn btn-danger'%>
  <% end %>
</li>